@model TrainMonitor.web.Models.Feedbacks.FeedbackViewModel
@{
    ViewData["Title"] = "Feedbacks";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="text-center mb-4">
        üöÜ Feedbacks for Train <strong>@Model.TrainName</strong> (#@Model.TrainNumber)
    </h2>
        <div class="row g-3">
            @foreach (var feedback in Model.FeedBacksList)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@feedback.Username</h5>
                            <p class="mb-2"><strong>Reason:</strong> @feedback.ReasonForDelay</p>
                            @if (!string.IsNullOrWhiteSpace(feedback.AditionalMessage))
                            {
                                <p class="text-muted">
                                    <strong>Additional message:</strong><br />
                                    @feedback.AditionalMessage
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-light">
                            <small class="text-secondary">üïí Submitted recently</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            ‚¨ÖÔ∏è Back to Dashboard
        </a>
    </div>
</div>